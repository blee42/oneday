extends ../layout

block content
  .login-wrap.container-fluid
    form(method='POST')
      legend.centered.login-cont Sign In
      p.centered.slogan-text Everyday we're faced with hundreds of decisions on how to spend our time. 
      p.centered.slogan-text What are you going to do on this 
        span.bold-text one day?
      br
      input(type='hidden', name='_csrf', value=_csrf)
      .col-md-4
      .col-md-4
        if secrets.localAuth
          .form-group
            label.control-label(for='email') Email
            input.form-control(type='text', name='email', id='email', placeholder='Email', autofocus=true)
          .form-group
            label.control-label(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
            button.btn.btn-primary(type='submit')
              i.fa.fa-unlock-alt
              | Login
            a.btn.btn-link(href='/forgot') Forgot your password?
          hr
        if secrets.facebookAuth
          a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
            i.fa.fa-facebook
            | Sign in with Facebook
      .col-md-4
